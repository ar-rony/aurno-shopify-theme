<div class="logo">
  <img width="{{ section.settings.logo_width }}" src="{{ section.settings.logo | img_url }}" alt="{{ shop.name }}">
</div>

{% schema %}
  {
    "name": "Header",
    "tag": "header",
    "class": "aurno_header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Choose Logo"
      }, 
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 100,
        "unit": "px",
        "label": "Logo Width"
      }
    ]
  }
{% endschema %}